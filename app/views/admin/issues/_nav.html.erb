<ul>
  <li>
    <%= link_to 'Manage TOC Note', edit_admin_issue_note_path(@publication_date.to_s(:iso)) %>
  </li>
</ul>

<% if AgencyName.unprocessed.count > 0 %>
  <div class="section">
    <h4>Agencies</h4>

    <ul>
      <li>
        <%= link_to_unless_current 'Unprocessed Agency Names',
          unprocessed_admin_agency_names_path() %>
        (<%= AgencyName.unprocessed.count %>)
      </li>
    </ul>
  </div>
<% end -%>

<div class="section">
  <h4>Sections</h4>

  <ul>
    <% sections.each do |section| %>
      <li>
        <%= link_to section.title,
          admin_issue_section_path(publication_date.to_s(:mdy_dash), section) %>
      </li>
    <% end %>
  </ul>
</div>
