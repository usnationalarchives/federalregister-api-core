<% if facets.present? %>
  <h4><%= name %></h4>
  <ul>
    <% facets_to_show = facets[0,@num_facets] %>
    <%= render :partial => "search/facet", :collection => facets_to_show %>
    <% if facets.size > facets_to_show.size  %>
      <li><a href="#" class="load_facet" data-facet-name="<%= facets.first.condition.to_s.sub(/_ids?/, '') %>">[more]</a></li>
    <% end %>
  </ul>
<% end %>
